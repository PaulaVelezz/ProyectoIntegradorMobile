<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2E30"
    tools:context=".CheckoutActivity">



    <!-- Título del Checkout prueba -->
    <TextView
        android:id="@+id/checkout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECKOUT"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de entrada para Dirección de Envío -->
    <TextView
        android:id="@+id/shipping_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección de envío"
        android:textColor="#FFCC00"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/checkout_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/shipping_address_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese su dirección de envío"
        android:textColor="@android:color/white"
        android:background="@drawable/border_background"
        android:padding="16dp"
        android:textColorHint="#888"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@id/shipping_address_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        android:layout_marginTop="8dp" />

    <!-- Campos de Nombre y Apellido -->
    <TextView
        android:id="@+id/personal_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información personal"
        android:textColor="#FFCC00"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/shipping_address_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/first_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textColor="@android:color/white"
        android:background="@drawable/border_background"
        android:padding="16dp"
        android:textColorHint="#888"
        app:layout_constraintTop_toBottomOf="@id/personal_info_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/last_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:textColor="@android:color/white"
        android:background="@drawable/border_background"
        android:padding="16dp"
        android:textColorHint="#888"
        app:layout_constraintTop_toBottomOf="@id/first_name_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        android:layout_marginTop="8dp" />

    <!-- Campo de entrada para número de tarjeta -->
    <TextView
        android:id="@+id/payment_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información de la tarjeta"
        android:textColor="#FFCC00"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/last_name_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/card_number_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Número de tarjeta"
        android:textColor="@android:color/white"
        android:background="@drawable/border_background"
        android:padding="16dp"
        android:textColorHint="#888"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/payment_info_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        android:layout_marginTop="8dp" />

    <!-- Detalle total -->
    <TextView
        android:id="@+id/total_detail_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle total"
        android:textColor="#FFCC00"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_number_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: $48000\nDelivery: $1000\nTotal: $49000"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/total_detail_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Comprar -->
    <Button
        android:id="@+id/buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPRAR"
        android:textStyle="bold"
        android:background="#FFCC00"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/total_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
