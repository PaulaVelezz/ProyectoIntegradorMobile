<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#262626"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvCheckoutTitle"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/bangersregular"
        android:text="@string/checkout_title"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <!-- Sección de dirección de entrega -->
    <TextView
        android:id="@+id/tvDeliveryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery_address"
        android:fontFamily="@font/tekovariablefontwght"
        android:textColor="@color/color_accent"
        android:textSize="25sp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_shape"
        android:padding="12dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvDeliveryAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/delivery_address_example"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings_icon"
            app:tint="@color/text_primary_dark"/>
    </LinearLayout>

    <!-- Sección de métodos de pago -->
    <TextView
        android:id="@+id/tvPaymentMethodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_method"
        android:fontFamily="@font/tekovariablefontwght"
        android:textColor="@color/color_accent"
        android:textSize="25sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Tarjeta de pago 1 -->
    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_card_background"
        android:padding="12dp"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/naranjatc"
            android:contentDescription="@string/payment_card_1"/>

        <TextView
            android:id="@+id/tvPaymentMethod1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_method_1"
            android:textColor="@color/text_primary_dark"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Tarjeta de pago 2 -->
    <LinearLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_card_background"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/visatc"
            android:contentDescription="@string/payment_card_2"/>

        <TextView
            android:id="@+id/tvPaymentMethod2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_method_2"
            android:textColor="@color/text_primary_dark"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Sección de métodos de pago -->
    <TextView
        android:id="@+id/tvPaymentSummaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_total"
        android:fontFamily="@font/tekovariablefontwght"
        android:textColor="@color/color_accent"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="3dp"/>

    <!-- Resumen de la compra -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_shape"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtotal"
            android:textColor="@color/text_primary_dark"/>

        <TextView
            android:id="@+id/tvDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery"
            android:textColor="@color/text_primary_dark"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="@color/text_primary_dark"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Botón de compra -->
    <Button
        android:id="@+id/btnComprar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_comprar"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="@font/bangersregular"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
