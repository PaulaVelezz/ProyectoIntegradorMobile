<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header con el botón de atrás y settings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:tint="#FFB74D"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="@string/back_button_content_description" />

        <TextView
            android:id="@+id/notifications_title"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/notifications_title"
            android:letterSpacing="0.1"
            android:fontFamily="@font/bangersregular"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@android:color/transparent"
            android:tint="#FFB74D"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings_button_content_description" />
    </LinearLayout>

    <!-- Notificación 1 -->
    <LinearLayout
        android:id="@+id/notification_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_notification_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFB74D"
            android:src="@drawable/ic_package_arrived" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_1_title"
                android:textColor="#E4AC57"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_1_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_1_subtitle"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFB74D"
        android:layout_marginVertical="16dp" />

    <!-- Notificación 2 -->
    <LinearLayout
        android:id="@+id/notification_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_notification_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFB74D"
            android:src="@drawable/ic_discount" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_2_title"
                android:textColor="#E4AC57"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_2_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_2_subtitle"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFB74D"
        android:layout_marginVertical="16dp" />

    <!-- Notificación 3 -->
    <LinearLayout
        android:id="@+id/notification_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_notification_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFB74D"
            android:src="@drawable/ic_purchase_failed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_3_title"
                android:textColor="#E4AC57"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_3_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_3_subtitle"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFB74D"
        android:layout_marginVertical="16dp" />

    <!-- Notificación 4 -->
    <LinearLayout
        android:id="@+id/notification_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_notification_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFB74D"
            android:src="@drawable/ic_package_on_way" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_4_title"
                android:textColor="#E4AC57"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_4_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_4_subtitle"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
